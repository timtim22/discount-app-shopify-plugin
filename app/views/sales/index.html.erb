<section>
  <article>
    <div class="card">
      <div class="row align-center">
        <%= link_to 'New Sale on whole store', new_sale_path(whole_store: true), class: 'button', style: 'padding: 10px 20px; font-weight: bold;' %>
        <%= link_to 'New Sale on specific collections', new_sale_path, class: 'button', style: 'padding: 10px 20px; font-weight: bold;' %>
      </div>
      <div class="row">
        <h2 class="align-left" style="margin-bottom: 0px;">Discountify Dashboard</h2>
      </div>
      <div class="row" style="text-align: center;">
        <% if !@sales.empty? %>
          <%= form_tag medit_sales_path, :method => :put do %>
            <table>
              <thead>
                <tr style="background-color: #014A81; color: white;">
                  <th colspan="1"></th>
                  <th>Title</th>
                  <th>Target</th>
                  <th>Amount</th>
                  <th>Type</th>
                  <th>Start time</th>
                  <th>End time</th>
                  <th>Status</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @sales.each do |sale| %>
                  <tr>
                    <td><%= check_box_tag "sale_ids[]", sale.id %></td>
                    <td><%= sale.title %></td>
                    <td><%= sale.sale_target %></td>
                    <td><%= sale.amount.to_s + " " + (sale.Percentage? ? "%" : @shop.currency) %></td>
                    <td><%= sale.sale_type %></td>
                    <td><%= sale.start_time ? sale.start_time : "-" %></td>
                    <td><%= sale.end_time ? sale.end_time : "-"  %></td>
                    <td><span class="tag <%= ['green', 'orange', 'grey pending', 'grey pending'][Sale.statuses[sale.status]] %>"><%= sale.status %></span></td>
                    <td><%= link_to sale do %><i class="icon-preview"></i><% end %></td>
                    <td><% if sale.Disabled? %>
                          <%= link_to edit_sale_path(sale) do %><i class="icon-edit"></i><% end %></td>
                          <td><%= link_to sale, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="icon-trash"></i><% end %>
                        <% else %>
                          </td><td>
                        <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <br>
            <div class="row">
              <span class="button-group">
                <%= submit_tag "Activate" %>
                <%= submit_tag "Deactivate", class: "secondary" %>
                <%= submit_tag "Delete", class: "warning" %>
              </span>
            </div>
          <% end %>
        <% else %>
          <br/>
          <p>You have no sales to view. Click the "New Sale" button above to add a sale.</p>
        <% end %>
      </div>
    </div>
  </article>
  <br>

</section>